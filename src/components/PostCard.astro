---
import type { CollectionEntry } from "astro:content";
import type { PostFrontmatter } from "../lib/types/post";
import { getReadingTime } from "../lib/utils/posts";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { title, description, pubDate }: PostFrontmatter = post.data;

const readingTime = getReadingTime(post.body);
---

<article class="group relative">
  <a
    href={`/${post.id}`}
    class="block rounded-lg border border-gray-100 bg-white p-6 shadow-sm transition-all duration-200 hover:-translate-y-1 hover:shadow-md hover:border-gray-200"
  >
    <div class="flex flex-col space-y-2">
      <h2 class="text-xl font-semibold transition group-hover:text-gray-600">
        {title}
      </h2>
      <div class="flex items-center">
        <time datetime={pubDate.toISOString()} class="text-sm text-gray-500">
          {pubDate.toLocaleDateString("pt-BR", { dateStyle: "long" })}
        </time>
        {readingTime && (
          <span class="mx-2">Â·</span>
          <p class="text-sm text-gray-500">{readingTime}</p>
        )}
      </div>
      {description && <p class="text-gray-600">{description}</p>}
    </div>
  </a>
</article>
