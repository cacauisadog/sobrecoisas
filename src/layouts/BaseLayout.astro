---
import "../styles/global.css";
import SiteHeader from "../components/site/SiteHeader.astro";

interface Props {
  title: string;
  description: string;
  isHomePage?: boolean;
}

const { title, description, isHomePage = false } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- OpenGraph Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <!-- Skip to content link -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:p-4"
      aria-label="Pular para o conteúdo"
    >
      Pular para o conteúdo
    </a>

    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
      <SiteHeader isHomePage={isHomePage} />
      <main id="main-content">
        <slot />
      </main>

      <footer class="mt-16 py-8 text-center text-gray-500">
        <p>&copy; {new Date().getFullYear()} sobrecoisas</p>
      </footer>
    </div>
  </body>
</html>
