---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags } = post.data;
---

<BaseLayout title={title} description={description}>
  <article class="prose prose-lg max-w-none">
    <header class="mb-8 text-center">
      <h1 class="mb-2 text-3xl font-bold">{title}</h1>
      <time datetime={pubDate.toISOString()} class="text-sm text-gray-500">
        {pubDate.toLocaleDateString('pt-BR', { dateStyle: 'long' })}
      </time>
      {tags && tags.length > 0 && (
        <div class="mt-4" aria-label="Tags do post">
          <h2 class="sr-only">Tags</h2>
          <div class="flex flex-wrap justify-center gap-2">
            {tags.map((tag) => (
              <a
                href={`/tag/${tag}`}
                class="rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-900 hover:bg-gray-200 hover:text-gray-600"
                aria-label={`Ver posts com a tag ${tag}`}
              >
                {tag}
              </a>
            ))}
          </div>
        </div>
      )}
    </header>

    <div class="mt-8">
      <slot />
    </div>
  </article>
</BaseLayout>
